<mvc:View
controllerName="sap.ui.demo.walkthrough.controller.Detail"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
 xmlns:core="sap.ui.core"
 displayBlock="true"
 xmlns:f="sap.f"
 xmlns:l="sap.ui.layout"
 xmlns:wt="sap.ui.demo.walkthrough.control">
<Page
	title="{i18n>detailPageTitle}"
	showNavButton="true"
	navButtonPress=".onNavBack">
	<ObjectHeader
		title="{film>FilmName}"/>
			<wt:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" />
		<ObjectListItem 
			intro="{film>FilmDescription}">		
         </ObjectListItem> 
		<IconTabBar
		id="idIconTabBarInlineMode"
		headerMode="Inline"
		expanded="true"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				text="Синема 5"
				
				key="1">
				<Text text=" пр-т. Хусаина Ямашева, 46,"></Text>	
				<!-- <Text text="{film>film2session/0/SessionDate}"></Text> -->
				<Button text="{film>film2session}"></Button>
			</IconTabFilter>
			<IconTabFilter
				text="КИНОМАКС"
				key="2">
				<Text text="пр-т. Ибрагимова, д. 56"></Text>
				<Button text="{film>film2session}"></Button>				
			</IconTabFilter>
			<IconTabFilter
				text="КАРО"
				key="3">
				<Text text="ул. Петербургская, 1"></Text>
				<Button text="{film>film2session}"></Button>
			</IconTabFilter>
		</items>
	
	</IconTabBar>
		 <Carousel class="sapUiContentPadding" loop="true">                  
			<Image src="filmPosters/{film>FilmId}/film1.jpg"/>
			<Image src="filmPosters/{film>FilmId}/film2.jpg"/>
			<Image src="filmPosters/{film>FilmId}/film3.jpg" />
			<Image src="filmPosters/{film>FilmId}/film4.jpg"/>
		</Carousel>
		 
</Page>
</mvc:View> 