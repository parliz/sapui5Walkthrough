<mvc:View
controllerName="sap.ui.demo.walkthrough.controller.Detail"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
 xmlns:core="sap.ui.core"
 displayBlock="true"
 xmlns:f="sap.f"
 xmlns:l="sap.ui.layout">
<Page
	title="{i18n>detailPageTitle}"
	showNavButton="true"
	navButtonPress=".onNavBack">
	<ObjectHeader
		intro="{film>FilmId}"
		title="{film>FilmName}"/>
		<ObjectListItem 
			intro="{film>FilmDescription}"			
			>
         </ObjectListItem> 
		 <Image src="{film>Film}"></Image>
		 
</Page>
</mvc:View> 


